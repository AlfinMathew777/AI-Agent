# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
# This is a template file. Copy this to .env and fill in your values.
# NEVER commit .env file to version control!

# ============================================================================
# Application Settings
# ============================================================================

APP_NAME=Southern Horizons Hotel
ENVIRONMENT=development
DEBUG=true
VERSION=1.0.0

# ============================================================================
# Server Settings
# ============================================================================

BACKEND_HOST=0.0.0.0
BACKEND_PORT=8010
FRONTEND_URL=http://localhost:5174

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5174,http://localhost:3000

# ============================================================================
# Database Settings
# ============================================================================

DATABASE_URL=sqlite:///hotel.db
DATABASE_POOL_SIZE=10
DATABASE_ECHO=false

# ============================================================================
# Security Settings (REQUIRED!)
# ============================================================================

# CRITICAL: Change this in production!
ADMIN_API_KEY=shhg_admin_secure_key_2024
ALLOW_DEV_ADMIN_KEY=true

# Secret key for JWT tokens (change in production!)
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# AI/LLM Settings
# ============================================================================

# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Optional: OpenAI API key
# OPENAI_API_KEY=your_openai_api_key_here

# LLM Configuration
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT_SECONDS=30

# ============================================================================
# Logging Settings
# ============================================================================

LOG_LEVEL=INFO
LOG_DIR=logs
LOG_JSON_FORMAT=true

# ============================================================================
# Feature Flags
# ============================================================================

ENABLE_AI_SERVICE=true
ENABLE_ANALYTICS=true
ENABLE_ACP=true

# ============================================================================
# External Services (Optional)
# ============================================================================

# Property Management System Integration
ENABLE_PMS_INTEGRATION=false
# PMS_API_URL=https://your-pms-api.com
# PMS_API_KEY=your_pms_api_key

# Payment Processing
ENABLE_PAYMENTS=false
# STRIPE_API_KEY=your_stripe_api_key

# ============================================================================
# Performance Settings
# ============================================================================

REQUEST_TIMEOUT_SECONDS=30
MAX_REQUEST_SIZE_MB=10
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300
