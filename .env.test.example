# .env.test.example
# ACP Test Suite Environment Configuration
# Copy this file to .env.test and fill in your values

# ===== SERVER CONFIGURATION =====
ACP_BASE_URL=http://localhost:8000

# ===== AUTHENTICATION =====
ACP_ADMIN_KEY=your_real_admin_key_here

# ===== TEST MODE CONFIGURATION =====
# Options: local | staging | prod
ACP_TEST_MODE=local

# ===== SAFETY SETTINGS =====
# Set to "true" to allow real booking tests in production (USE WITH EXTREME CAUTION)
ACP_ALLOW_REAL_BOOKING_TESTS=false

# ===== TEST DATA =====
# Property ID to use for testing
ACP_TEST_PROPERTY_ID=cloudbeds_001

# ===== API PATHS (Optional - override if different) =====
# ACP_AGENT_REGISTER_PATH=/acp/register
# ACP_SUBMIT_PATH=/acp/submit

# ===== PERFORMANCE TESTING =====
# Set to "true" to include performance tests in release gate
ACP_RUN_PERFORMANCE=false

# ===== NOTES =====
# - In local/staging: execute tests MUST use dry_run=True
# - In prod: execute tests are BLOCKED unless ACP_ALLOW_REAL_BOOKING_TESTS=true
# - Always verify ACP_TEST_MODE before running tests
